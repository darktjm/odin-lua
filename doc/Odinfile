odin.pdf == odin.tex +usepdf :pdf
%html-in == <<
   odin.tex +usepdf :texauxin.vtd
   (odin.tex :texbasis :ls) +subst='^(.*\\/)?([^\\/]*)$/%'\''\\2'\''=='\''\\1\\2'\' :regsub

odin.html == () \
   +cmd='odir="$PWD";cd' (%html-in :list :cat :vir_dir)'; \
        latex2html -split 0 -noimages -nonavigation -show_section_numbers \
                   -math -noinfo -dir "$odir" odin.tex' \
   :output/odin.html
