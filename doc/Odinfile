odin.pdf == odin.tex +usepdf :pdf
%html-in == <<
   odin.tex +usepdf :texauxin.vtd
   odin.tex :tex.vtd

odin.html == () \
   +cmd=cd (%html-in :list :cat :vir_dir)';' \
        latex2html -split 0 -noimages -nonavigation -show_section_numbers \
                   -math -noinfo odin.tex '>/dev/null' '2>&1' ';' \
        cat 'odin/odin.html' ';' rm -rf odin ';' \
   :stdout
